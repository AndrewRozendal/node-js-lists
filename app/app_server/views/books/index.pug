extends ../layout
include ../includes/bookCard

block content
  h1.text-center.py-3= pageHeader.title
  .row
    .book-details.col-12.col-xl-8
      h2= pageHeader.tagline
      .container.book-list
        if errorMsg
          .alert.alert-danger= errorMsg
        each book in books
          - const buttons = [{url: `/book/${book._id}`, tag: 'More Details'}, {url: '#', tag: 'Add To My Reading List'}]
          +writeBookCard(book, buttons)
    .side-bar-text.col-12.col-xl-4.pt-5
      p= sideContent
